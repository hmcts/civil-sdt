<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/aop/spring-aop-3.1.xsd">

    <!-- Mock implementation for Bulk Request submission handler -->
    <bean id="uk.gov.moj.sdt.producers.api.IWsCreateBulkRequestHandlerMock" 
        class="uk.gov.moj.sdt.handlers.MockWsCreateBulkRequestHandler">
        <property name="responseFactory" ref="uk.gov.moj.sdt.producers.sdtws.api.IResponseFactory"/>
    </bean>
    
    <bean id="uk.gov.moj.sdt.producers.api.IWsCreateBulkRequestHandler" 
        class="uk.gov.moj.sdt.handlers.WsCreateBulkRequestHandler">
        <property name="sdtBulkReferenceGenerator" ref="uk.gov.moj.sdt.utils.api.ISdtBulkReferenceGenerator"/>
        <property name="transformer" ref="uk.gov.moj.sdt.transformers.BulkRequestToDomainTransformer"/>
    </bean>

    <bean id="uk.gov.moj.sdt.producers.api.IWsReadBulkRequestHandler" 
        class="uk.gov.moj.sdt.handlers.WsReadBulkFeedbackRequestHandler">
        <property name="bulkFeedbackService" ref="uk.gov.moj.sdt.services.api.IBulkFeedbackService"/>
        <property name="transformer" ref="uk.gov.moj.sdt.transformers.BulkFeedbackToDomainTransformer"/>
    </bean>
                
    <bean id="uk.gov.moj.sdt.producers.api.IWsReadSubmitQueryHandler" 
        class="uk.gov.moj.sdt.handlers.WsReadSubmitQueryHandler">
        <property name="submitQueryService" ref="uk.gov.moj.sdt.services.api.ISubmitQueryService"/>
        <property name="transformer" ref="uk.gov.moj.sdt.transformers.SubmitQueryToDomainTransformer"/>
    </bean>        
        
</beans>
    
