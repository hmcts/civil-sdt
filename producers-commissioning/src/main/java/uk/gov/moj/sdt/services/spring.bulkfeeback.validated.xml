<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
	
	<!-- This is the spring configuration file for initialising validated bulk feed back data -->	
		
	<!-- Submission date, this maps to created date in bulk submission -->
	<bean id="org.joda.time.LocalDateTime.submissionDateValidated" class="org.joda.time.LocalDateTime">
		<!-- Use static date of 22 July 2013 -->
		 <constructor-arg index="0" value="2013"/>
		 <constructor-arg index="1" value="7"/>
		 <constructor-arg index="2" value="22"/>
		 <constructor-arg index="3" value="13"/>
		 <constructor-arg index="4" value="0"/>		
	</bean>

	<!-- Bulk submission with no individual requests -->
	<bean id="uk.gov.moj.sdt.domain.api.IBulkSumissionValidated" class="uk.gov.moj.sdt.domain.BulkSubmission">        
        <property name="customerReference" value="USER_FILE_REFERENCE_A1"/>
        <property name="createdDate" ref="org.joda.time.LocalDateTime.submissionDateValidated" />
        <property name="numberOfRequest" value="24"/>
        <property name="submissionStatus" value="Validated"/>        
    </bean>
    
    <!-- Define the Bulk Feedback Factory and pass in the Bulk Submission in the constructor -->
    <bean id="uk.gov.moj.sdt.producers.comx.utils.BulkFeedbackFactoryValidated" class="uk.gov.moj.sdt.producers.comx.utils.BulkFeedbackFactory">
    	<constructor-arg ref="uk.gov.moj.sdt.domain.api.IBulkSumissionValidated"/>
    </bean>
    
</beans>

