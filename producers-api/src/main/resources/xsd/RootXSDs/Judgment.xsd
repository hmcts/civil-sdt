            <xs:element name="interest" type="tns:amountType9999999" minOccurs="0"/>
            <xs:element name="solicitorCost" type="tns:amountType999999" minOccurs="0"/>
            <xs:element name="deductedAmount" type="tns:amountType99999999" minOccurs="0"/>
            <!-- TODO Hillary to confirm if this is required. -->
            <xs:element name="guidanceRead" type="xs:boolean"/>
            <xs:element name="sotSignature" type="tns:sotSignature"/>
