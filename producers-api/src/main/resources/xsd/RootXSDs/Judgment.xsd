    <!-- TODO Why not be case sensitive? -->
	<xs:simpleType name="judgmentOption">
		<xs:restriction base="xs:string">
			<xs:pattern value="[aA]|[dD]"/>
		</xs:restriction>
	</xs:simpleType>

    <!-- TODO Determine meaning of values for frequency -->
    <xs:simpleType name="instalmentFrequency">
        <xs:restriction base="xs:string">
            <xs:enumeration value="W"/>
            <xs:enumeration value="F"/>
            <xs:enumeration value="M"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:complexType name="instalment">
        <xs:annotation>
            <xs:documentation>Instalment information consisting of frequency and amount. The amount cannot be greater than claim amount.</xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="amount" type="tns:amountType9999999"/>
            <xs:element name="frequency" type="tns:instalmentFrequency"></xs:element>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="paymentSchedule">
        <xs:choice>
            <xs:element name="fullByDate" type="xs:date">
                <xs:annotation>
                    <xs:documentation>The date by which defendant should pay the full amount. Should be in future and not tomorrow.</xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element name="instalment" type="tns:instalment"/>
            <xs:element name="immediately" type="xs:boolean" fixed="true">
                <xs:annotation>
                    <xs:documentation>The defendant will be ordered to pay the full amount immediately.</xs:documentation>
                </xs:annotation>
            </xs:element>
        </xs:choice>
    </xs:complexType>

