<?xml version="1.0" encoding="UTF-8"?>
<!-- Message from external system to SDT Gateway -->
<bulkRequest>
    <header>
        <!-- TODO TBC Gateway can validate the id -->
        <sdtCustomerId>SDT_Customer_id</sdtCustomerId> 
        <targetSystemId>mcol</targetSystemId>
        <requestCount>2</requestCount>
        <customerReference>customer_external_reference</customerReference>
    </header>
	<requests>
        <choice>
            <!-- Either PCOL or MCOL requests will be allowed -->
            <!-- Customer code is CPC Number -->
            <mcolRequests customerCode="xxxx">
            <!-- TODO Adjust element names -->
                <mcolRequest requestType="claim" requestId="request identifier">
                    <choice>
                        <mcolClaim></mcolClaim>
                        <mcolPaid></mcolPaid>
                        <mcolJudgment></mcolJudgment>
                        <mcolWarrant></mcolWarrant>
                        <mcolJudgmentForthwith></mcolJudgmentForthwith>
                    </choice>
                </mcolRequest>
            </mcolRequests>
            <pcolRequests customerId="1234">
                <pcolRequest requestType="abc" requestId="request identifier">
                    <choice>
                        <req1></req1>
                        <req2></req2>
                    </choice>
                </pcolRequest>
            </pcolRequests>
        </choice>
	</requests>
</bulkRequest>
