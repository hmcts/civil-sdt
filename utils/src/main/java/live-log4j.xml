<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Define appender to log console messages -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %p %c | %m%n" />
        </layout>
    </appender>

    <!-- Define appender (log file) to which all MCOL messages are written -->
    <appender name="rolling" class="org.apache.log4j.RollingFileAppender">
        <param name="file" value="logs/mcol.log" />
        <param name="MaxFileSize" value="300MB" />
        <!-- Keep one backup file -->
        <param name="MaxBackupIndex" value="4" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %p %c | %m%n" />
        </layout>
    </appender>

    <!-- Logger for MCOL application code -->
    <!-- N.B. additivity=true will cause this logger to log message and then 
        pass message to root logger -->
    <logger name="uk.gov.moj" additivity="true">
        <level value="info" />
        <appender-ref ref="rolling" />
    </logger>

    <!-- Logger for payment gateway code -->
    <logger name="uk.gov.gateway.payment" additivity="true">
        <level value="info" />
        <appender-ref ref="rolling" />
    </logger>

    <!-- Ensure Log message doesn't lazy initialise objects. If this is set 
        to debug tests may not be accurate -->
    <logger name="uk.gov.moj.mcol.util.log.LogMessage" additivity="true">
        <level value="fatal" />
        <appender-ref ref="rolling" />
    </logger>

    <!-- Logger for apache 3rd-party code -->
    <logger name="org.apache" additivity="true">
        <level value="info" />
        <appender-ref ref="rolling" />
    </logger>

    <!-- Logger for hibernate code -->
    <logger name="org.hibernate" additivity="true">
        <level value="error" />
        <appender-ref ref="rolling" />
    </logger>

    <!-- Logger for spring code -->
    <logger name="org.springframework" additivity="true">
        <level value="error" />
        <appender-ref ref="rolling" />
    </logger>

    <!-- Logger for quartz scheduler code -->
    <logger name="org.dbunit" additivity="true">
        <level value="error" />
        <appender-ref ref="rolling" />
    </logger>

    <!-- Logger for http client code -->
    <logger name="httpclient" additivity="true">
        <level value="warn" />
        <appender-ref ref="rolling" />
    </logger>

    <!-- Root logger. If other loggers have additivity=true, messages will be 
        logged by the root logger also. Set to 'debug' level to ensure all messages 
        are capable of being logged -->
    <root>
        <priority value="info" />
        <appender-ref ref="console" />
    </root>

</log4j:configuration>