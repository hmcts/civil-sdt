<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Define appender to log console messages -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %p %c %L | %m%n" />
        </layout>
    </appender>

    <!-- Define appender (log file) to which all SDT messages are written -->
    <appender name="rolling" class="org.apache.log4j.RollingFileAppender">
        <param name="file" value="../logs/sdt.log" />
        <param name="MaxFileSize" value="300MB" />
        <!-- Keep one backup file -->
        <param name="MaxBackupIndex" value="4" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %p %c %L | %m%n" />
        </layout>
    </appender>

    <!-- Logger for SDT application code -->
    <!-- N.B. additivity=true will cause this logger to log message and then 
        pass message to root logger -->
    <logger name="uk.gov.moj.sdt" additivity="true">
        <level value="debug" />
        <appender-ref ref="rolling" />
    </logger>

    <!-- Logger for apache 3rd-party code -->
    <logger name="org.apache" additivity="true">
        <level value="info" />
        <appender-ref ref="rolling" />
    </logger>

    <!-- Logger for hibernate code -->
    <logger name="org.hibernate" additivity="true">
        <level value="warn" />
        <appender-ref ref="rolling" />
    </logger>

    <!-- Logger for SQL generated by hibernate -->
    <logger name="org.hibernate.SQL" additivity="true">
        <level value="debug" />
        <appender-ref ref="rolling" />
    </logger>

    <!-- Logger to show parameter values for SQL generated by hibernate -->
    <!-- 
    <logger name="org.hibernate.type" additivity="true">
        <level value="TRACE" />
        <appender-ref ref="rolling" />
    </logger>
     -->

    <!-- Logger for spring code -->
    <logger name="org.springframework" additivity="true">
        <level value="warn" />
        <appender-ref ref="rolling" />
    </logger>

    <!-- Logger for Hibernate Txn manager -->
    <!-- 
    <logger name="org.springframework.orm" additivity="true">
        <level value="debug" />
        <appender-ref ref="rolling" />
    </logger>
     -->
     
    <!-- Logger for dbunit -->
    <logger name="org.dbunit" additivity="true">
        <level value="error" />
        <appender-ref ref="rolling" />
    </logger>

    <!-- Logger for http client code -->
    <logger name="httpclient" additivity="true">
        <level value="warn" />
        <appender-ref ref="rolling" />
    </logger>

    <!-- Root logger. If other loggers have additivity=true, messages will be 
        logged by the root logger also. Set to 'debug' level to ensure all messages 
        are capable of being logged -->
    <root>
        <priority value="info" />
        <appender-ref ref="console" />
    </root>

</log4j:configuration>