    </target>

    <!-- Build war file -->
    <target name="build-war" depends="-copy-resources,
        -copy-classes,
        -copy-web-inf-resources,
        -copy-app-lib,-copy-3rd-party-lib,-copy-wsdl,
        -compress" description="Generate the distribution war file">
        <jar jarfile="${target.dir}/consumers.war" basedir="${consumers.target.dir}" />
    </target>

</project>
