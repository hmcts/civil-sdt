<?xml version="1.0" encoding="UTF-8"?>
<application xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.zeroturnaround.com" xsi:schemaLocation="http://www.zeroturnaround.com http://www.zeroturnaround.com/alderaan/rebel-2_0.xsd">

	<classpath>
		<dir name="${rebel.workspace.path}/consumers/bin">
			<!-- Exclude this file because JRebel tries to create the beans in this file when producers.war -->
			<!-- is deployed even though it's not part of the final deployed war. When CXF can't find the class -->
			<!-- it defaults to SOAP 11 endpoint and causes incompatibility issues when sending SOAP 12 messages -->		
			<exclude name="uk/gov/moj/sdt/consumers/spring.context.xml"/>
            <exclude name="uk/gov/moj/sdt/consumers/spring.context.test.xml"/>
		</dir>
	</classpath>

</application>
